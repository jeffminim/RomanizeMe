{
  "manifest_version": 3,
  "name": "RomanizeMe",
  "version": "1.0",
  "description": "RomanizeMe is a Chrome extension that helps you romanize non-Latin languages. ",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["content/content.css"],
      "js": [
        "libs/ko_hangul.js",
        "libs/ja_romaji.js",
        "content/text_segmenter.js",
        "content/content.js",
        "libs/extra/TinySegmenterJapanese/tiny_segmenter-0.2.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [{
    "resources": [
      "content/content.css",
      "assets/*"
    ],
    "matches": ["<all_urls>"]
  }, {
    "resources": ["config/languages.json"],
    "matches": ["<all_urls>"]
  }],
  "icons": {
    "16": "assets/romanizemelogo16.png",
    "32": "assets/romanizemelogo32.png",
    "48": "assets/romanizemelogo48.png",
    "64": "assets/romanizemelogo64.png",
    "128": "assets/romanizemelogo128.png",
    "256": "assets/romanizemelogo256.png"
  }
}
