{
  "manifest_version": 3,
  "name": "RomanizeMe",
  "description": "A tool to help you learn pronunciations of non-Latin characters.",
  "version": "1.0",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/romanizemelogo16.png",
      "32": "assets/romanizemelogo32.png",
      "48": "assets/romanizemelogo48.png",
      "128": "assets/romanizemelogo128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/content.js"
      ]
    }
  ],
  "icons": {
    "16": "assets/romanizemelogo16.png",
    "32": "assets/romanizemelogo32.png",
    "48": "assets/romanizemelogo48.png",
    "128": "assets/romanizemelogo128.png"
  }
}