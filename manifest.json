{
  "manifest_version": 3,
  "name": "RomanizeMe",
  "languages": [
    {
      "code": "en",
      "name": "English"
    },
    {
      "code": "zh",
      "name": "中文"
    },
    {
      "code": "ja",
      "name": "日本語"
    },
    {
      "code": "ko",
      "name": "한국어"
    },
    {
      "code": "fr",
      "name": "Français"
    }
  ],
  "version": "1.2.2",
  "description": "__MSG_extensionDescription__",
  "default_locale": "en",
  "author": "windminim@outlook.com",
  "homepage_url":"https://github.com/jeffminim/RomanizeMe",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["content/content.css"],
      "js": [
        "libs/ko_hangul.js",
        "libs/ja_romaji.js",
        "libs/zh_hanzi.js",
        "libs/extra/PinyinPro/index.js",
        "content/text_segmenter.js",
        "content/content.js",
        "libs/extra/TinySegmenterJapanese/tiny_segmenter-0.2.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [{
    "resources": [
      "content/content.css",
      "assets/*",
      "config/languages.json",
      "config/locales.json",
      "libs/extra/PinyinPro/*"
    ],
    "matches": ["<all_urls>"]
  }],
  "icons": {
    "16": "assets/romanizemelogo16.png",
    "32": "assets/romanizemelogo32.png",
    "48": "assets/romanizemelogo48.png",
    "64": "assets/romanizemelogo64.png",
    "128": "assets/romanizemelogo128.png",
    "256": "assets/romanizemelogo256.png"
  }
}
